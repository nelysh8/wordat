      <div class="searchbar">
        <div class="searchbar_main  shadow-sm">
          <textarea class="autosize ft8" id="main_input" placeholder="Search a Sentence" required onclick="resize(this); footbar_dis();" onkeydown="resize(this);" onkeyup="resize(this);"></textarea>
          <div id="main_input_icon_x"><i class="fa-solid fa-xmark text_red animate__animated"  onclick="clear_input();click_fadein(this);"></i></div>
          <div id="main_input_icon_trans"><i class="fa-solid fa-language text_green animate__animated" onclick="click_fadein(this); tranbtn_click();"></i></div>
        </div>
        <div class="searchbar_items shadow-sm" onclick="footbar_vis();">          
          <a id="link_yarn" href="https://getyarn.io/" target="_blank" sytle="margin-left : 0;"><img class="animate__animated border-round" src="/images/icon_yarn.webp" width="30" height="30" onclick="click_fadein(this);"/></a>
          <a id="link_youglish" href="https://www.youglish.com/" target="_blank"><img class="animate__animated border-round" src="/images/icon_youglish.jpg" width="60" height="30" onclick="click_fadein(this);"/></a>
          <a id="link_google" href="https://www.google.com/" target="_blank"><img class="animate__animated border-round" src="/images/icon_google.png" width="30" height="30" onclick="click_fadein(this);"/></a>
          <i class="tts fa-solid fa-forward text_red animate__animated" onclick="click_fadein(this); tts(1);"></i>          
          <i class="tts fa-solid fa-play text_green animate__animated" onclick="click_fadein(this); tts(0.5);"></i>          
          <i class="fa-solid fa-square-plus text_red animate__animated " data-bs-toggle="modal" data-bs-target="#myModal_example" onclick="click_fadein(this); add_click();"></i>
          <!-- <button class="btn-modal btn btn-danger bg-gradient" data-bs-toggle="modal" data-bs-target="#myModal_example" onclick="add_click();"> + </button>                          -->
            <div id="myModal_example" class="modal fade" role="dialog">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <div class="row">
                      <span class="ft5 ftbb">Add words to the wordbook</span>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="row">
                      <div class="dropdown">                      
                        <button id="dropdown_button" class="btn dropdown-toggle bg_firebrick text_white ft8" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Wordbook
                        </button>
                        <ul class="dropdown-menu" id="addword_dropdown_wordbook">
                          <li><a class="dropdown-item" href="#">Action</a></li>
                          <li><a class="dropdown-item" href="#">Another action</a></li>
                          <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                      </div>
                    </div>                    
                  </div>                  
                  <form id="form_addword" action="/word_manage/add/내단어장" method="post">
                    <div class="modal-body">                                          
                      <div class="input-group mb-3">
                        <span class="input-group-text ft8 ftb bg_cornsilk text_red" id="basic-addon1" > ENG </span>
                        <input type="text" name="word_english" class="form-control ft8" placeholder="Input a English Sentence" id="edit_eng" aria-label="Username" aria-describedby="basic-addon1" > 
                      </div>
                      <div class="input-group mb-3">
                        <span class="input-group-text ft8 ftb bg_cornsilk text_red" id="basic-addon1"> KOR </span>
                        <input type="text" name="word_korean" class="form-control ft8" placeholder="Input it's meaning" id="edit_kor" aria-label="Username" aria-describedby="basic-addon1">
                      </div>                                      
                      <div class="modal-footer">                        
                        <button type="submit" class="btn bg_firebrick bg-gradient text_cornsilk ft8 ftbb" data-bs-dismiss="modal"> ADD </button>
                        <button type="button" class="btn btn-secondary bg-gradient ft8 ftbb" data-bs-dismiss="modal"> CLOSE </button>                        
                      </div>                    
                    </div>
                  </form> 
              </div>
            </div>
        </div>
      
      
      </div>        
    
      
      
      <div class="searchResult shadow-sm animate__animated" style="display: none" id="Sres_view" onclick="footbar_vis();">        
